<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <View
            android:id="@+id/build_status"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPassing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/repository_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_status_passing"
                android:gravity="center_vertical"
                android:textColor="@color/colorPassing"
                tools:text="user/ProjectName"/>

            <TextView
                android:id="@+id/build_duration"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_duration"
                tools:text="Duration: 1h 2m"/>

            <TextView
                android:id="@+id/build_finished"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_finished"
                tools:text="Finished: 6 days ago"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>